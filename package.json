{
    "name": "live-server-qr",
	"publisher": "Lucas Norgaard",
    "displayName": "Live Server QR",
    "icon": "media/icon.png",
    "description": "",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.51.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "live-server-qr.generateQR",
                "category": "LiveServerQR",
                "title": "Share via QR Code"
            }
        ],
        "keybindings": [
            {
                "command": "live-server-qr.generateQR",
                "key": "alt+L alt+S",
                "when": "editorTextFocus",
                "mac": "cmd+L cmd+S"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "live-server-qr.generateQR",
                    "group": "myGrp@live-server-qr",
                    "when": "resourceLangId == html"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack --config webpack.config.js",
        "watch": "concurrently \"rollup -c -w\" \"webpack --watch --config webpack.config.js\"",
        "package": "webpack --mode production --devtool hidden-source-map --config webpack.config.js",
        "test-compile": "tsc -p ./",
        "test-watch": "tsc -watch -p ./",
        "pretest": "npm run test-compile && npm run lint",
        "lint": "eslint src --ext ts"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "17.1.0",
        "@rollup/plugin-node-resolve": "11.2.0",
        "@rollup/plugin-typescript": "8.2.0",
        "@tsconfig/svelte": "1.0.10",
        "@types/glob": "^7.1.3",
        "@types/ip": "1.1.0",
        "@types/mocha": "^8.0.4",
        "@types/node": "^12.11.7",
        "@types/qrcode": "1.4.0",
        "@types/vscode": "^1.51.0",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "concurrently": "6.0.0",
        "eslint": "^7.19.0",
        "glob": "^7.1.6",
        "mocha": "^8.2.1",
        "rollup": "2.41.2",
		"rollup-plugin-css-only": "3.1.0",
        "rollup-plugin-svelte": "7.1.0",
        "rollup-plugin-terser": "7.0.2",
        "svelte": "3.35.0",
        "svelte-check": "1.2.5",
        "svelte-preprocess": "4.6.9",
        "ts-loader": "8.0.18",
        "typescript": "^4.1.3",
        "vscode-test": "^1.5.0",
        "webpack": "5.26.0",
        "webpack-cli": "4.5.0"
    },
    "dependencies": {
        "ip": "1.1.5",
        "qrcode": "1.4.4"
    }
}
